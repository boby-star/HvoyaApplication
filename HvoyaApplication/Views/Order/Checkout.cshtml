@model HvoyaApplication.ViewModels.CheckoutViewModel
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="container mt-5">
    <h1 class="text-center">@Localizer["Checkout"]</h1>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form asp-action="Checkout" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="FullName" class="form-label">@Localizer["Full Name"]</label>
            <input asp-for="FullName" class="form-control" required />
            <span class="text-danger">
                @Html.ValidationMessageFor(m => m.FullName)
            </span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">@Localizer["Address"]</label>
            <input asp-for="Address" class="form-control" required />
            <span class="text-danger">
                @Html.ValidationMessageFor(m => m.Address)
            </span>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label">@Localizer["Phone Number"]</label>
            <input asp-for="PhoneNumber" class="form-control" required />
            <span class="text-danger">
                @Html.ValidationMessageFor(m => m.PhoneNumber)
            </span>
        </div>

        @await Html.PartialAsync("_ShoppingCartSummary", (HvoyaApplication.Models.ShoppingCart)ViewBag.ShoppingCart)

        <div class="text-end mt-4">
            <button type="submit" class="btn btn-success btn-lg">@Localizer["Confirm Order"]</button>
        </div>
    </form>
</div>
