@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Order Complete"];
}

<div class="container text-center mt-5">
    <h1 class="text-success">@Localizer["Thank you for your order!"]</h1>
    <p class="lead">@Localizer["Your order was successfully placed."]</p>
    <a href="/" class="btn btn-primary">@Localizer["Return to Home Page"]</a>
</div>
