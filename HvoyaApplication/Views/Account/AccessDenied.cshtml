@using Microsoft.Extensions.Localization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["AccessDeniedTitle"];
}

<div class="text-center mt-5">
    <h1 class="display-4 text-danger">@Localizer["AccessDeniedTitle"]</h1>
    <p class="lead">@Localizer["AccessDeniedMessage"]</p>

    @if (User.Identity.IsAuthenticated)
    {
        <p class="text-muted">@Localizer["YouAreLoggedInAs"] <strong>@User.Identity.Name</strong></p>
    }
    else
    {
        <p class="text-muted">@Localizer["NotLoggedInMessage"]</p>
    }

    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
            @Localizer["ReturnHomePage"]
        </a>

        @if (!User.Identity.IsAuthenticated)
        {
            <a href="@Url.Action("Login", "Account")" class="btn btn-secondary btn-lg ml-2">
                @Localizer["LoginButton"]
            </a>
        }
    </div>
</div>
