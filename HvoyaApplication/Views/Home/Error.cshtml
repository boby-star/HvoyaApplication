@model HvoyaApplication.Models.ErrorViewModel

@{
    ViewData["Title"] = "Помилка";
}

<div class="text-center mt-5">
    <h1 class="text-danger">Щось пішло не так...</h1>
    <p class="lead">На жаль, сталася помилка при обробці вашого запиту.</p>

    @if (Model?.RequestId != null)
    {
        <p>Ідентифікатор помилки: <strong>@Model.RequestId</strong></p>
    }

    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Повернутися на головну</a>
</div>
