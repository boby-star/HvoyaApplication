@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["AdminPanel"];
}

<div class="container mt-5">
    <h1 class="text-center">@Localizer["AdminPanel"]</h1>
    <div class="row mt-4 justify-content-center">
        <div class="col-md-5">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["ManageDesserts"]</h5>
                    <p class="card-text">@Localizer["ManageDessertsDetails"]</p>
                    <a href="@Url.Action("ManageDesserts", "Admin")" class="btn btn-primary">@Localizer["GoTo"]</a>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["ManageOrders"]</h5>
                    <p class="card-text">@Localizer["ManageOrdersDetails"]</p>
                    <a href="@Url.Action("ManageOrders", "Admin")" class="btn btn-success">@Localizer["GoTo"]</a>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["ManageUsers"]</h5>
                    <p class="card-text">@Localizer["ManageUsersDetails"]</p>
                    <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-primary">@Localizer["GoTo"]</a>
                </div>
            </div>
        </div>
    </div>
</div>
